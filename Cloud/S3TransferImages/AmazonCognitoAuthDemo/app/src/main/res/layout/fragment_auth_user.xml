<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.amazonaws.cognito.android.samples.authdemo.fragments.AuthUserFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/card_view_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/info_text_id_tok_ttl"
                android:text= "Id Token"
                android:padding="@dimen/activity_text_padding"
                android:background="@color/grey_300"
                android:textColor="@color/grey_600"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/info_text_id_tok"
                android:padding="@dimen/activity_text_padding"
                android:background="@color/grey_300"
                android:textColor="@color/grey_600"
                android:layout_below="@+id/info_text_id_tok_ttl"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textViewPlaceHolder6"
        android:layout_below="@+id/card_view_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_intra_group_separation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/card_view_access"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewPlaceHolder6"
        android:background="@color/grey_300"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/info_text_acc_tok_ttl"
                android:text= "Access Token"
                android:padding="@dimen/activity_text_padding"
                android:background="@color/grey_600"
                android:textColor="@color/grey_100"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/info_text_acc_tok"
                android:padding="@dimen/activity_text_padding"
                android:background="@color/grey_600"
                android:textColor="@color/grey_100"
                android:layout_below="@+id/info_text_acc_tok_ttl"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/buttonSignout"
        android:layout_above="@+id/textViewPlaceHolder4So"
        android:text="Sign out"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/button_selector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_button_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewPlaceHolder4So"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_intra_group_separation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="" />

</RelativeLayout>
