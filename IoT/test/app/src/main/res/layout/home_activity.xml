<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/homeRootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".HomeActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.ImageClassification">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/homeToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.ImageClassification" />

        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:id="@+id/homeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/bt_my"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:text="내 옷장" />

                    <Button
                        android:id="@+id/bt_pop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유행도 평가" />

                    <Button
                        android:id="@+id/bt_recom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="코디 추천" />

                    <TextView
                        android:id="@+id/tv_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/bt_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Button" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_icon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@color/black"
                            tools:srcCompat="@tools:sample/avatars" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_wt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="현재 날씨"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tv_nowtemp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="현재 온도"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tv_hightemp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="최고 기온"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tv_lowtemp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="최저 기온"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tv_hu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="습도"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tv_win"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="풍속"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tv_weather"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="날씨 정보 올 곳"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/examplesRv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:background="#DD8686" />

        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>